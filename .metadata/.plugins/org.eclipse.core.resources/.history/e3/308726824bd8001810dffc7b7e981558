package utility;

public class ContaCorrente
{

	private String name = "Aderbaldo";
	private String n_account;
	private double balance = 2000;

	
	// Withdraw --------------------------------------
	double withdraw(double withdraw_value)
	{

		balance -= (withdraw_value);
		return (balance - withdraw_value);

	}
	// -----------------------------------------------

	
	// Deposit----------------------------------------
	double deposit(double deposit_value)
	{

		balance += (deposit_value);
		return (balance + deposit_value);

	}
	// -----------------------------------------------

	
	// Account balance -------------------------------
	double checkBalance()
	{

		return balance;

	}
	// -----------------------------------------------
		
	
	// Account number --------------------------------
	String nAccount(String nAcc)
	{
		
		n_account = nAcc;
		return n_account;
	
	}
	
	String checkAccount() 
	{
		
		return n_account;
	
	}
	// -----------------------------------------------

	// Account Name
	String changeName(String newName)
	{
		
		name = newName;
		return name;
	
	}
	
	String checkName()
	{

		return name;

	}
	// -----------------------------------------------

}
