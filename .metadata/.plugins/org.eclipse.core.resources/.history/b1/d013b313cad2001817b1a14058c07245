package utility;

public class Pessoa
{

	String nome;
	int rg, cpf;
	double peso, altura;

	public Pessoa()
	{
		nome = "";
		rg = 0;
		cpf = 0;
	}

	public Pessoa(String nome, int rg, int cpf)
	{
		this.nome = nome;
		this.rg = rg;
		this.cpf = cpf;
	}

	double calcularIMC()
	{
		return (peso / Math.pow(altura, 2));
	}

